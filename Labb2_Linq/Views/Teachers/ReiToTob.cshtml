@model Labb2_Linq.Models.Teacher
@{
    @if (Model == null)
    {
        <h1> Reidar är inte lärare i Programmering 1</h1>
    }
    else
    {
        <h1>Ta bort Reidar som lärare på programmering 1 och lägg till Tobias</h1>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="ReiToTob">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden"  asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <input type="hidden" asp-for="Courses" class="form-control" />
                        <span asp-validation-for="Courses" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    }

}
